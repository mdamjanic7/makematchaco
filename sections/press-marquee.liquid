{% style %}
  .press-marquee {
    display: block;
    width: 100vw;
    position: relative;
    left: 50%;
    right: 50%;
    margin-left: -50vw;
    margin-right: -50vw;
    overflow: hidden;
    padding: {{ section.settings.section_padding_top }}px 0 {{ section.settings.section_padding_bottom }}px;
    background-color: {{ section.settings.background_color }};
  }

  .press-marquee__container {
    width: 100%;
    max-width: 100%;
  }

  .press-marquee__heading {
    text-align: center;
    margin: 0 0 {{ section.settings.heading_spacing }}px;
    color: {{ section.settings.text_color }};
    font-size: {{ section.settings.heading_size }}px;
  }

  .press-marquee__sr-only {
    position: absolute;
    width: 1px;
    height: 1px;
    padding: 0;
    margin: -1px;
    overflow: hidden;
    clip: rect(0, 0, 0, 0);
    white-space: nowrap;
    border: 0;
  }

  .press-marquee__track {
    display: flex;
    width: max-content;
    animation: press-marquee-scroll {{ section.settings.scroll_speed }}s linear infinite;
  }

  .press-marquee__item {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    height: {{ section.settings.logo_height }}px;
    margin-right: {{ section.settings.logo_spacing }}px;
  }

  .press-marquee__logo {
    max-width: 100%;
    max-height: 100%;
    width: auto;
    height: auto;
    object-fit: contain;
  }

  .press-marquee__placeholder {
    display: flex;
    align-items: center;
    justify-content: center;
    width: {{ section.settings.logo_height | times: 1.5 }}px;
    height: {{ section.settings.logo_height }}px;
    background-color: #f4f4f4;
    border-radius: 4px;
  }

  .press-marquee__placeholder svg {
    width: 50%;
    height: 50%;
    opacity: 0.3;
  }

  @keyframes press-marquee-scroll {
    0% {
      transform: translateX(0);
    }
    100% {
      transform: translateX(-50%);
    }
  }

  @media screen and (max-width: 749px) {
    .press-marquee__item {
      height: {{ section.settings.logo_height_mobile }}px;
    }

    .press-marquee__placeholder {
      width: {{ section.settings.logo_height_mobile | times: 1.5 }}px;
      height: {{ section.settings.logo_height_mobile }}px;
    }

    .press-marquee__heading {
      font-size: {{ section.settings.heading_size | times: 0.8 }}px;
    }
  }
{% endstyle %}

<press-marquee-{{ section.id }} class="press-marquee" {{ section.shopify_attributes }}>
  <div class="press-marquee__container">
    {% if section.settings.heading != blank %}
      <h2 class="press-marquee__heading">{{ section.settings.heading }}</h2>
    {% endif %}

    {%- comment -%} Screen reader accessible list of logos {%- endcomment -%}
    <ul class="press-marquee__sr-only">
      {% for block in section.blocks %}
        {% if block.settings.logo != blank %}
          <li>{{ block.settings.logo.alt | default: 'Press logo' | escape }}</li>
        {% endif %}
      {% endfor %}
    </ul>

    <div class="press-marquee__track" aria-hidden="true">
      {% liquid
        assign blocks_count = 0
        for block in section.blocks
          if block.settings.logo != blank
            assign blocks_count = blocks_count | plus: 1
          endif
        endfor
      %}

      {% if blocks_count > 0 %}
        {%- comment -%} Duplicate logos 4 times for seamless scrolling {%- endcomment -%}
        {% for iteration in (1..4) %}
          {% for block in section.blocks %}
            {% if block.settings.logo != blank %}
              <div class="press-marquee__item" {{ block.shopify_attributes }}>
                <img
                  src="{{ block.settings.logo | image_url: width: 400 }}"
                  alt=""
                  class="press-marquee__logo"
                  loading="lazy"
                  width="{{ block.settings.logo.width }}"
                  height="{{ block.settings.logo.height }}"
                >
              </div>
            {% endif %}
          {% endfor %}
        {% endfor %}
      {% else %}
        {%- comment -%} Show placeholder logos if no blocks added {%- endcomment -%}
        {% for iteration in (1..4) %}
          {% for i in (1..6) %}
            <div class="press-marquee__item">
              <div class="press-marquee__placeholder">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            </div>
          {% endfor %}
        {% endfor %}
      {% endif %}
    </div>
  </div>
</press-marquee-{{ section.id }}>

<script>
  (function() {
    class PressMarquee extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.track = this.querySelector('.press-marquee__track');
        this.init();
      }

      init() {
        if (!this.track) return;
        
        // Wait for images to load before calculating
        const images = this.track.querySelectorAll('img');
        if (images.length > 0) {
          Promise.all(
            Array.from(images).map(img => {
              if (img.complete) return Promise.resolve();
              return new Promise(resolve => {
                img.addEventListener('load', resolve);
                img.addEventListener('error', resolve);
              });
            })
          ).then(() => {
            this.adjustAnimationSpeed();
          });
        } else {
          this.adjustAnimationSpeed();
        }
      }

      adjustAnimationSpeed() {
        if (!this.track) return;
        
        // Get the width of half the track (since we animate to -50%)
        // This works because we duplicate logos 4 times, so halfway = 2 complete sets
        const halfTrackWidth = this.track.scrollWidth / 2;
        const speed = {{ section.settings.scroll_speed }};
        
        // Calculate duration based on track width and speed setting
        // Higher speed value = slower animation (more seconds)
        const duration = (halfTrackWidth / 100) * (speed / 10);
        this.track.style.animationDuration = duration + 's';
      }
    }

    customElements.define('press-marquee-{{ section.id }}', PressMarquee);
  })();
</script>

