  "disabled_on": {
    "groups": ["header"]
  },
  "settings": [
    {
      "type": "text",
      "id": "heading",
      "label": "t:settings.heading",
      "default": "What's in every cup"
    },
    {
      "type": "textarea",
      "id": "subheading",
      "label": "t:settings.text",
      "default": "Calm energy. Sharper focus. Faster recovery. Here's what makes it work."
