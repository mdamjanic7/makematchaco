{% doc %}
  @prompt
    Make an editorial block where I can choose a few hero products to display
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-editorial-block-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    padding: {{ block.settings.section_padding }}px 20px;
    background-color: {{ block.settings.background_color }};
  }

  .ai-editorial-container-{{ ai_gen_id }} {
    max-width: 1400px;
    margin: 0 auto;
  }

  .ai-editorial-header-{{ ai_gen_id }} {
    text-align: {{ block.settings.text_alignment }};
    margin-bottom: 40px;
  }

  .ai-editorial-heading-{{ ai_gen_id }} {
    font-size: {{ block.settings.heading_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0 0 12px;
    font-family: var(--font-heading-family);
  }

  .ai-editorial-subheading-{{ ai_gen_id }} {
    font-size: {{ block.settings.subheading_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    opacity: 0.8;
  }

  .ai-editorial-grid-{{ ai_gen_id }} {
    display: grid;
    gap: {{ block.settings.grid_gap }}px;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  }

  @media screen and (min-width: 750px) {
    .ai-editorial-grid-{{ ai_gen_id }} {
      grid-template-columns: repeat({{ block.settings.products_per_row }}, 1fr);
    }

    .ai-editorial-block-{{ ai_gen_id }} {
      width: {{ block.settings.desktop_width_percent }}%;
    }
  }

  .ai-editorial-product-card-{{ ai_gen_id }} {
    position: relative;
    display: flex;
    flex-direction: column;
    text-decoration: none;
    color: inherit;
    border-radius: {{ block.settings.card_border_radius }}px;
    overflow: hidden;
    background-color: {{ block.settings.card_background }};
    transition: transform 0.3s ease;
  }

  .ai-editorial-product-card-{{ ai_gen_id }}:hover {
    transform: translateY(-4px);
  }

  .ai-editorial-image-wrapper-{{ ai_gen_id }} {
    position: relative;
    width: 100%;
    padding-bottom: 125%;
    overflow: hidden;
    background-color: #f4f4f4;
  }

  .ai-editorial-image-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .ai-editorial-placeholder-{{ ai_gen_id }} {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    background-color: #f4f4f4;
  }

  .ai-editorial-placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  .ai-editorial-badge-{{ ai_gen_id }} {
    position: absolute;
    top: 12px;
    left: 12px;
    padding: 6px 12px;
    background-color: {{ block.settings.badge_background }};
    color: {{ block.settings.badge_text_color }};
    font-size: 12px;
    font-weight: 600;
    border-radius: 4px;
    text-transform: uppercase;
    letter-spacing: 0.5px;
  }

  .ai-editorial-content-{{ ai_gen_id }} {
    padding: 20px;
    display: flex;
    flex-direction: column;
    gap: 8px;
    flex-grow: 1;
  }

  .ai-editorial-product-title-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_title_size }}px;
    color: {{ block.settings.heading_color }};
    margin: 0;
    font-weight: 600;
    line-height: 1.3;
  }

  .ai-editorial-product-description-{{ ai_gen_id }} {
    font-size: {{ block.settings.product_description_size }}px;
    color: {{ block.settings.text_color }};
    margin: 0;
    line-height: 1.5;
    opacity: 0.85;
  }

  .ai-editorial-price-{{ ai_gen_id }} {
    font-size: {{ block.settings.price_size }}px;
    color: {{ block.settings.heading_color }};
    font-weight: 600;
    margin-top: auto;
  }

  .ai-editorial-empty-state-{{ ai_gen_id }} {
    text-align: center;
    padding: 60px 20px;
    color: {{ block.settings.text_color }};
    opacity: 0.6;
  }

  .ai-editorial-empty-state-{{ ai_gen_id }} p {
    margin: 0;
    font-size: 16px;
  }
{% endstyle %}

<editorial-products-{{ ai_gen_id }}
  class="ai-editorial-block-{{ ai_gen_id }}"
  {{ block.shopify_attributes }}
>
  <div class="ai-editorial-container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank or block.settings.subheading != blank %}
      <div class="ai-editorial-header-{{ ai_gen_id }}">
        {% if block.settings.heading != blank %}
          <h2 class="ai-editorial-heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
        {% endif %}
        {% if block.settings.subheading != blank %}
          <p class="ai-editorial-subheading-{{ ai_gen_id }}">{{ block.settings.subheading }}</p>
        {% endif %}
      </div>
    {% endif %}

    {% liquid
      assign has_products = false
      for i in (1..6)
        assign product_key = 'product_' | append: i
        assign product = block.settings[product_key]
        if product != blank
          assign has_products = true
          break
        endif
      endfor
    %}

    {% if has_products %}
      <div class="ai-editorial-grid-{{ ai_gen_id }}">
        {% for i in (1..6) %}
          {% liquid
            assign product_key = 'product_' | append: i
            assign product = block.settings[product_key]
          %}

          {% if product != blank %}
            <a
              href="{{ product.url }}"
              class="ai-editorial-product-card-{{ ai_gen_id }}"
            >
              <div class="ai-editorial-image-wrapper-{{ ai_gen_id }}">
                {% if product.featured_image %}
                  <img
                    src="{{ product.featured_image | image_url: width: 600 }}"
                    alt="{{ product.featured_image.alt | escape }}"
                    class="ai-editorial-image-{{ ai_gen_id }}"
                    loading="lazy"
                    width="600"
                    height="750"
                  >
                {% else %}
                  <div class="ai-editorial-placeholder-{{ ai_gen_id }}">
                    {{ 'product-1' | placeholder_svg_tag }}
                  </div>
                {% endif %}

                {% if block.settings.show_badge and product.available == false %}
                  <div class="ai-editorial-badge-{{ ai_gen_id }}">Sold Out</div>
                {% elsif block.settings.show_badge and product.compare_at_price > product.price %}
                  <div class="ai-editorial-badge-{{ ai_gen_id }}">Sale</div>
                {% endif %}
              </div>

              <div class="ai-editorial-content-{{ ai_gen_id }}">
                <h3 class="ai-editorial-product-title-{{ ai_gen_id }}">{{ product.title }}</h3>

                {% if block.settings.show_description and product.description != blank %}
                  <p class="ai-editorial-product-description-{{ ai_gen_id }}">
                    {{ product.description | strip_html | truncate: 120 }}
                  </p>
                {% endif %}

                {% if block.settings.show_price %}
                  <div class="ai-editorial-price-{{ ai_gen_id }}">
                    {{ product.price | money }}
                  </div>
                {% endif %}
              </div>
            </a>
          {% endif %}
        {% endfor %}
      </div>
    {% else %}
      <div class="ai-editorial-empty-state-{{ ai_gen_id }}">
        <p>Select products to showcase in this editorial block</p>
      </div>
    {% endif %}
  </div>
</editorial-products-{{ ai_gen_id }}>

<script>
  (function() {
    class EditorialProducts{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
      }

      connectedCallback() {
        this.initializeCards();
      }

      initializeCards() {
        const cards = this.querySelectorAll('.ai-editorial-product-card-{{ ai_gen_id }}');
        cards.forEach(card => {
          card.addEventListener('click', (e) => {
            if (e.metaKey || e.ctrlKey) {
              return;
            }
          });
        });
      }
    }

    customElements.define('editorial-products-{{ ai_gen_id }}', EditorialProducts{{ ai_gen_id }});
  })();
</script>

