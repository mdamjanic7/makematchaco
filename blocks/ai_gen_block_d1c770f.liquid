{% doc %}
  @prompt
    Create a marquee section that displays press logos scrolling horizontally across the page. The section should allow merchants to upload multiple press/media outlet logos that continuously scroll from right to left in a smooth, infinite loop. Include settings to control scroll speed, logo size, and spacing between logos. The design should be clean and professional to showcase brand credibility.
{% enddoc %}
{% assign ai_gen_id = block.id | replace: '_', '' | downcase %}

{% style %}
  .ai-press-marquee-{{ ai_gen_id }} {
    display: block;
    width: 100%;
    overflow: hidden;
    background-color: {{ block.settings.background_color }};
    padding: {{ block.settings.padding_top }}px 0 {{ block.settings.padding_bottom }}px;
  }

  .ai-press-marquee__container-{{ ai_gen_id }} {
    width: 100%;
    max-width: 100%;
  }

  .ai-press-marquee__heading-{{ ai_gen_id }} {
    text-align: center;
    margin: 0 0 {{ block.settings.heading_spacing }}px;
    color: {{ block.settings.heading_color }};
    font-size: {{ block.settings.heading_size }}px;
  }

  .ai-press-marquee__track-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    will-change: transform;
  }

  .ai-press-marquee__wrapper-{{ ai_gen_id }} {
    display: flex;
    align-items: center;
    gap: {{ block.settings.logo_spacing }}px;
    flex-shrink: 0;
    padding-right: {{ block.settings.logo_spacing }}px;
  }

  .ai-press-marquee__logo-{{ ai_gen_id }} {
    flex-shrink: 0;
    display: flex;
    align-items: center;
    justify-content: center;
    height: {{ block.settings.logo_height }}px;
    filter: grayscale({{ block.settings.grayscale_amount }}%);
    opacity: {{ block.settings.logo_opacity | divided_by: 100.0 }};
    transition: filter 0.3s ease, opacity 0.3s ease;
  }

  .ai-press-marquee__logo-{{ ai_gen_id }}:hover {
    filter: grayscale(0%);
    opacity: 1;
  }

  .ai-press-marquee__logo-{{ ai_gen_id }} img {
    max-height: 100%;
    width: auto;
    max-width: {{ block.settings.logo_max_width }}px;
    object-fit: contain;
  }

  .ai-press-marquee__placeholder-{{ ai_gen_id }} {
    width: {{ block.settings.logo_max_width }}px;
    height: {{ block.settings.logo_height }}px;
    background-color: #f4f4f4;
    display: flex;
    align-items: center;
    justify-content: center;
    border-radius: 4px;
  }

  .ai-press-marquee__placeholder-{{ ai_gen_id }} svg {
    width: 60%;
    height: 60%;
    opacity: 0.3;
  }

  @media (prefers-reduced-motion: reduce) {
    .ai-press-marquee__track-{{ ai_gen_id }} {
      animation: none !important;
    }
  }

  @media screen and (max-width: 749px) {
    .ai-press-marquee__logo-{{ ai_gen_id }} {
      height: {{ block.settings.logo_height_mobile }}px;
    }

    .ai-press-marquee__logo-{{ ai_gen_id }} img {
      max-width: {{ block.settings.logo_max_width_mobile }}px;
    }

    .ai-press-marquee__placeholder-{{ ai_gen_id }} {
      width: {{ block.settings.logo_max_width_mobile }}px;
      height: {{ block.settings.logo_height_mobile }}px;
    }
  }
{% endstyle %}

<press-marquee-{{ ai_gen_id }} class="ai-press-marquee-{{ ai_gen_id }}" {{ block.shopify_attributes }}>
  <div class="ai-press-marquee__container-{{ ai_gen_id }}">
    {% if block.settings.heading != blank %}
      <h2 class="ai-press-marquee__heading-{{ ai_gen_id }}">{{ block.settings.heading }}</h2>
    {% endif %}

    <div class="ai-press-marquee__track-{{ ai_gen_id }}">
      <div class="ai-press-marquee__wrapper-{{ ai_gen_id }}">
        {% for i in (1..8) %}
          {% liquid
            assign logo_key = 'logo_' | append: i
            assign logo = block.settings[logo_key]
          %}

          {% if logo != blank %}
            <div class="ai-press-marquee__logo-{{ ai_gen_id }}">
              <img
                src="{{ logo | image_url: width: 400 }}"
                alt="{{ logo.alt | escape }}"
                width="{{ logo.width }}"
                height="{{ logo.height }}"
              >
            </div>
          {% else %}
            <div class="ai-press-marquee__logo-{{ ai_gen_id }}">
              <div class="ai-press-marquee__placeholder-{{ ai_gen_id }}">
                {{ 'image' | placeholder_svg_tag }}
              </div>
            </div>
          {% endif %}
        {% endfor %}
      </div>
    </div>
  </div>
</press-marquee-{{ ai_gen_id }}>

<script>
  (function() {
    var WRAPPER_CLASS = '.ai-press-marquee__wrapper-{{ ai_gen_id }}';
    var TRACK_CLASS = '.ai-press-marquee__track-{{ ai_gen_id }}';
    var KEYFRAME_ID = 'ai-press-marquee-scroll-{{ ai_gen_id }}';
    var BASE_DISTANCE = 1000;
    var BASE_DURATION = {{ block.settings.scroll_speed }};
    var FALLBACK_TIMEOUT = 5000;

    class PressMarquee{{ ai_gen_id }} extends HTMLElement {
      constructor() {
        super();
        this.started = false;
      }

      connectedCallback() {
        this.track = this.querySelector(TRACK_CLASS);
        if (!this.track) return;

        this.track.setAttribute('role', 'marquee');
        this.track.setAttribute('aria-live', 'off');

        if (window.matchMedia('(prefers-reduced-motion: reduce)').matches) return;

        this.wrapper = this.track.querySelector(WRAPPER_CLASS);
        if (!this.wrapper) return;

        this.waitForImages();
      }

      waitForImages() {
        var images = this.wrapper.querySelectorAll('img');
        var pending = [];
        var self = this;

        for (var i = 0; i < images.length; i++) {
          if (!images[i].complete) pending.push(images[i]);
        }

        if (pending.length === 0) {
          requestAnimationFrame(function() { self.start(); });
          return;
        }

        var settled = 0;

        function onSettle() {
          settled++;
          if (settled >= pending.length) {
            requestAnimationFrame(function() { self.start(); });
          }
        }

        for (var j = 0; j < pending.length; j++) {
          pending[j].addEventListener('load', onSettle);
          pending[j].addEventListener('error', onSettle);
        }

        setTimeout(function() {
          if (!self.started) {
            requestAnimationFrame(function() { self.start(); });
          }
        }, FALLBACK_TIMEOUT);
      }

      start() {
        if (this.started) return;
        this.started = true;

        var wrapperWidth = this.wrapper.offsetWidth;
        if (wrapperWidth <= 0) return;

        var containerWidth = this.track.parentElement.offsetWidth;
        var copiesNeeded = Math.ceil(containerWidth / wrapperWidth) + 1;

        for (var i = 0; i < copiesNeeded; i++) {
          var clone = this.wrapper.cloneNode(true);
          clone.setAttribute('aria-hidden', 'true');
          this.track.appendChild(clone);
        }

        var pxPerSecond = BASE_DISTANCE / BASE_DURATION;
        var duration = wrapperWidth / pxPerSecond;

        var style = document.createElement('style');
        style.textContent =
          '@keyframes ' + KEYFRAME_ID + ' {' +
          ' from { transform: translateX(0); }' +
          ' to { transform: translateX(-' + wrapperWidth + 'px); }' +
          '}';
        document.head.appendChild(style);

        this.track.style.animation = KEYFRAME_ID + ' ' + duration + 's linear infinite';
      }
    }

    customElements.define('press-marquee-{{ ai_gen_id }}', PressMarquee{{ ai_gen_id }});
  })();
</script>

